<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.insights.InsightsFragment">


    <TextView
        android:id="@+id/tvInsightsCover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_16dp"
        android:text="@string/insights"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvDiaryCover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16dp"
        android:layout_marginStart="@dimen/size_16dp"
        android:text="@string/my_diary"
        android:textColor="@color/for_title_text"
        android:textSize="@dimen/textSize_18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInsightsCover" />


    <androidx.cardview.widget.CardView
        android:id="@+id/btnGoToNotes"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_128dp"
        android:layout_marginTop="@dimen/size_4dp"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginEnd="@dimen/size_16dp"
        app:cardCornerRadius="@dimen/size_16dp"
        app:cardBackgroundColor="@color/background_for_views"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDiaryCover">

        <ImageView
            android:id="@+id/btnNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/size_8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/button_go_to_next_page"
            android:src="@drawable/ic_arrow_insights" />

        <TextView
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:text="Перечитай, що ти записував колись і зроби висновки"
            android:layout_margin="@dimen/size_16dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/for_title_text"
            android:textStyle="bold"
            android:textSize="@dimen/textSize_24sp"/>

        <ImageView
            android:layout_width="@dimen/size_96dp"
            android:layout_height="@dimen/size_96dp"
            android:layout_margin="@dimen/size_16dp"
            android:src="@drawable/dnotediary"
            android:layout_gravity="end|center_vertical"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvMoodCover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16dp"
        android:text="@string/my_mood"
        android:textColor="@color/for_title_text"
        android:textSize="@dimen/textSize_18sp"
        app:layout_constraintStart_toStartOf="@+id/btnGoToNotes"
        app:layout_constraintTop_toBottomOf="@+id/btnGoToNotes" />


    <androidx.cardview.widget.CardView
        android:id="@+id/btnGoToMood"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_128dp"
        android:layout_marginTop="@dimen/size_4dp"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginEnd="@dimen/size_16dp"
        app:cardCornerRadius="@dimen/size_16dp"
        app:cardBackgroundColor="@color/background_for_views"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMoodCover">

        <ImageView
            android:id="@+id/btnMoods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/size_8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/button_go_to_next_page"
            android:src="@drawable/ic_arrow_insights" />

        <TextView
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:text="Передивись, який настрій в тебе був колись"
            android:layout_margin="@dimen/size_16dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/for_title_text"
            android:textStyle="bold"
            android:textSize="@dimen/textSize_24sp"/>

        <ImageView
            android:layout_width="@dimen/size_96dp"
            android:layout_height="@dimen/size_96dp"
            android:layout_margin="@dimen/size_16dp"
            android:src="@drawable/dmoodtracker"
            android:layout_gravity="end|center_vertical"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
